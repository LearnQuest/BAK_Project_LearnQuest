<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hintergrund">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="225dp"
        android:layout_height="39dp"
        android:layout_marginTop="4dp"
        android:text="Wie funktioniert das?"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="284dp"
        android:layout_height="132dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#11000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <TextView
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#11000000"
            android:ems="10"
            android:inputType="none"
            android:text="Hier auf der Maps siehst du verschiedene grüne Marker. Du bist der blaue Punkt, der sich auf unserem Fh-Campus hin und her bewegt damit dies funtkioniert, stelle bitte sicher, dass du sowohl eine Internetverbindung hast, als auch der App den Zugriff auf deine Position erlaubst. Im Menüpunkt Fächer (subjects) kannst du ein Fach auswählen, welches du lernen möchtest.Es werden nun verschiedene Fragen den grünen Markern auf der Map zugeteilt. Nun kannst du von Marker zu Marker gehen und Fragen zum Gewählten Fach beantworten.Achte hierbei darauf, dass die Marker in deren Nähe du dich befindest rot aufleuchtenn und sich dadurch erkennbar machen.
Ps: Für verschieden kleinere erreichte Ziele kannst du im Unterpunkt Trophies ein paar kleine Belohnungen freischalten.
Ganz viel Spaß wünschen
Heidi und Francesca
"
            android:textColor="@color/colorPrimaryDark" />
    </ScrollView>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="185dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:text="Alles klar!"
        android:textAlignment="center"
        android:textColor="#C51162"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />


</android.support.constraint.ConstraintLayout>