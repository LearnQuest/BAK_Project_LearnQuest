<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hintergrund">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="225dp"
        android:layout_height="39dp"
        android:layout_marginTop="4dp"
        android:fontFamily="casual"
        android:text="How does it work?"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="284dp"
        android:layout_height="132dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#11000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <TextView
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#11000000"
            android:ems="10"
            android:fontFamily="casual"
            android:inputType="none"
            android:textColor="@color/colorPrimaryDark"
            android:text="Das Ziel dieses Projektes ist es, eine Android-App zu entwickeln, welche beim
Lernen unterstützen kann. Diese App ist ähnlich wie Pokemon Go, d.h. die
StudentInnen gehen an bestimmte Orte (in unserem Campus) um Fragen zu
entdecken und zu beantworten. Ein Belohnungssystem (To Be Defined) fördert die
Erfolgserlebnisse der StudentInnen." />
    </ScrollView>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="185dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:fontFamily="casual"
        android:text="Got it!"
        android:textAlignment="center"
        android:textColor="#C51162"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />


</android.support.constraint.ConstraintLayout>